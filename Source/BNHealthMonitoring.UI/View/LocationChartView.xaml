             xmlns:local="clr-namespace:BNHealthMonitoring.UI.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="950"
             DataContext="{Binding LocationChart, Source={StaticResource Locator}}">
