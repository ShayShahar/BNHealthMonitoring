<Controls:MetroWindow x:Class="BNHealthMonitoring.UI.View.MainWindow"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BNHealthMonitoring.UI"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:model="clr-namespace:BNHealthMonitoring.UI.Model"
        xmlns:view="clr-namespace:BNHealthMonitoring.UI.View"
        xmlns:helpers="clr-namespace:WPFExtensions.Helpers;assembly=WPFExtensions"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:command="http://www.galasoft.ch/mvvmlight"
        xmlns:converters="clr-namespace:BNHealthMonitoring.UI.Converters"
        mc:Ignorable="d"
        Title="Health Monitoring" Height="768" Width="1024"
        DataContext="{Binding Main, Source={StaticResource Locator}}" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:StringToUppercaseConverter x:Key="StringToUppercaseConverter" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*"></RowDefinition>
            <RowDefinition Height="0.7*"></RowDefinition>
            <RowDefinition Height="0.15*"></RowDefinition>
            <RowDefinition Height="0.7*"></RowDefinition>
            <RowDefinition Height="0.15*"></RowDefinition>
            <RowDefinition Height="0.7*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="0.3"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="2"
              Grid.Row="1"
              Margin="2,0,0,2">
            <view:ProbabilityTableView></view:ProbabilityTableView>
        </Grid>
        <Grid Grid.Column="1"
              Grid.Row="1"
              Background="Gray"
              Margin="0,10,0,10"/>
        <Grid Grid.Row="0"
              Grid.Column="0"
              ColumnSpan="3"
              Background="#363636">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0"
                       Margin="5,0,0,0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Content="COMPONENTS DEPHENDENCY TREE"
                       FontWeight="Bold">
                </Label>
                <Label Grid.Column="1" Margin="5,0,0,0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Content="CONDITIONAL PROBABLITY TABLE"
                       FontWeight="Bold">
                </Label>
            </Grid>
        </Grid>

        <Grid Grid.Row="1"
              Grid.Column="0">
            <view:ComponentsTreeView></view:ComponentsTreeView>
        </Grid>

        <Grid Grid.Row="2"
              Grid.Column="0"
              ColumnSpan="3"
               Background="#363636">
            <Label Grid.Column="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Content="SATELLITE LOCATION MONITOR"
                       FontWeight="Bold">
            </Label>
        </Grid>

        <Grid Grid.Row="3"
              Grid.Column="0"
              ColumnSpan="3">
            <view:LocationChartView></view:LocationChartView>
        </Grid>

        <Grid Grid.Row="4"
              Grid.Column="0"
              ColumnSpan="3"
              Background="#363636">
            <Label Grid.Column="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Content="FAULT DETECTION STATES"
                       FontWeight="Bold" />
        </Grid>

        <Grid Grid.Row="5"
              Grid.Column="0"
              ColumnSpan="3"
              Margin="2,0,0,2">
            <view:AlgorithmOutputView></view:AlgorithmOutputView>
        </Grid>
    </Grid>
</Controls:MetroWindow>
