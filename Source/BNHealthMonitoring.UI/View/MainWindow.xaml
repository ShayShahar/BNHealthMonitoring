<Controls:MetroWindow x:Class="BNHealthMonitoring.UI.View.MainWindow"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BNHealthMonitoring.UI"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:model="clr-namespace:BNHealthMonitoring.UI.Model"
        xmlns:view="clr-namespace:BNHealthMonitoring.UI.View"
        mc:Ignorable="d"
        Title="Health Monitoring" Height="500" Width="950"
        DataContext="{Binding Main, Source={StaticResource Locator}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1"
              Margin="5"
              Grid.Row="1">
            <view:PlotView></view:PlotView>
        </Grid>
        <Grid Grid.Row="0"
              Grid.Column="0"
              ColumnSpan="2"
              Background="DarkGray">
            <Label Margin="5,0,0,0"
               VerticalAlignment="Center"
               Content="Compoenets Tree"
               FontWeight="Bold"></Label>
        </Grid>

        <TreeView Grid.Column="0" ItemsSource="{Binding Components}" 
                  Grid.Row="1" 
                  x:Name="ComponentsTree">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate DataType="{x:Type model:Component}" 
                                          ItemsSource="{Binding Children}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding Name}"/>
                        <StackPanel HorizontalAlignment="Right" Grid.Column="1" 
                                    Orientation="Horizontal"
                                    Margin="0,0,10,0">
                            <TextBlock Text="State:"></TextBlock>
                            <TextBlock Foreground="Brown" Text="{Binding State}" Margin="5,0,0,0"/>
                        </StackPanel>
 
                    </Grid>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </Grid>
</Controls:MetroWindow>
