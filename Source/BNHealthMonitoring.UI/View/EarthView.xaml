<UserControl x:Class="BNHealthMonitoring.UI.View.EarthView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:t="clr-namespace:HelixToolkit.Wpf;assembly=HelixToolkit.Wpf" 
        mc:Ignorable="d" 
        d:DesignHeight="300" d:DesignWidth="300"
        >
    <Grid>
        <t:HelixViewport3D x:Name="EarthViewport"
                           ItemsSource="{Binding Earth}"
                           IsPanEnabled="False"
                           ShowViewCube="False"
                           RotationSensitivity="0.3"
                           InfiniteSpin="True"
                     IsHeadLightEnabled="True">
            <t:HelixViewport3D.Background>
                <ImageBrush ImageSource="/BNHealthMonitoring.UI;component/Resources/stars.jpg"/>
            </t:HelixViewport3D.Background>
            <t:SphereVisual3D x:Name="EarthModule" 
                              Radius="1" 
                              Material="{t:ImageMaterial 'pack://application:,,,/Resources/earth4k.jpg'}" 
                              ThetaDiv="180" 
                              PhiDiv="90" />
        </t:HelixViewport3D>
    </Grid>
</UserControl>